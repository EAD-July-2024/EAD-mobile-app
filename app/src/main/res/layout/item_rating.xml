<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Rating stars using RatingBar -->
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:progress="2"
        android:progressTint="#FF9800"
        android:rating="5"
        android:stepSize="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Rating comment -->
    <TextView
        android:id="@+id/ratingComment"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="This is a comment about the vendor."
        android:textSize="14sp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingBar" />

    <!-- Rating created date -->
    <TextView
        android:id="@+id/ratingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created on: 2024-10-06"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Rating modified date -->
    <TextView
        android:id="@+id/ratingModifiedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modified on: 2024-10-07"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ratingDate"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Edit button for userâ€™s own rating -->
    <Button
        android:id="@+id/editRatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:padding="20dp"
        android:text="Edit"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>